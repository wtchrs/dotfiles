/*
 * Inspired by: Waybar config in ketsumashu/nixx
 * Source: https://github.com/ketsumashu/nixx/blob/b44665bf6a760eca5660541df9fc95ea57f8bd65/home/waybar/default.nix
 * Modified for personal use
 */
{
    "layer": "top",
    "position": "left",
    "output": "eDP-1",
    "width": 50,
    "margin-top": 8,
    "margin-bottom": 8,
    "spacing": 15,
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-right": ["mpris", "pulseaudio", "group/status", "battery", "clock", "tray"],

    "hyprland/window": {
        "max-length": 49,
        "rotate": 270
    },

    "mpris": {
        "format": "{player_icon}{title}",
        "format-paused": "{status_icon}{title}",
        "player-icons": {
            "default": "â–¶ ",
            "mpv": "ğŸµ"
        },
        "status-icons": {
            "paused": "â¸ "
        },
        "interval": 1,
        "max-length": 100,
        "rotate": 270
    },

    "hyprland/workspaces": {
        "format": "{icon}",
        "all-outputs": false,
        "persistent-workspaces": {
            "eDP-1": 5
        },
        "format-icons": {
            "1": "âš«",
            "2": "âš«",
            "3": "âš«",
            "4": "âš«",
            "5": "âš«",
            "6": "6",
            "7": "7",
            "8": "8",
            "9": "9",
            "10": "10",
        },
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1"
    },

    "pulseaudio": {
        "scroll-step": 1,
        "format": "{icon} {volume}%",
        "format-bluetooth": "vol.{volume}",
        "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
        "format-muted": "MUTED",
        "format-source": "{volume}%",
        "format-source-muted": "MUTED",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï–",
            "headset": "ï–",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "rotate": 0,
        "on-click": "alacritty --class float -e pulsemixer"
    },

    "group/status": {
        "orientation": "vertical",
        "modules": [
            "network",
            "cpu",
            "memory",
            "disk",
            "backlight"
        ],
        "drawer": {
            "transition-duration": 500,
        },
        "align": 0
    },

    "network": {
        "format": " {ifname}",
        "format-wifi": " ï‡« {signalStrength}%",
        "format-ethernet": " î½„ {ipaddr}",
        "format-disconnected": " ó°Œ™ ",
        "tooltip-format": " ï– {ifname} via {gwaddri}",
        "tooltip-format-wifi": " ï‡« {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": " î½„ {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": " î¬ Disconnected",
        "max-length": 50,
        "on-click": "alacritty --class float -e nmtui",
        "align": 0
    },

    "cpu": {
        "format": " ï’¼ {usage}%",
        "on-click": "alacritty --class float -e sh -c 'command -v btop &>/dev/null && btop || htop'",
        "interval": 2,
        "align": 0
    },

    "memory": {
        "format": " î¿… {}%",
        "interval": 2,
        "on-click": "alacritty --class float -e sh -c 'command -v btop &>/dev/null && btop || htop'",
        "rotate": 0,
        "align": 0
    },

    "disk": {
        "interval": 5,
        "format": " ï‚  {percentage_used}%",
        "path": "/",
        "on-click": "hyprctl dispatch exec \"[float]\" btrfs-assistant-launcher",
        "align": 0
    },

    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": " {icon}{capacity}%",
        "format-charging": " ó°‚„ {capacity}%",
        "format-plugged": " ï‡¦ {capacity}%",
        "format-alt": " {icon}{time}",
        "format-icons": ["ï‰„ ", "ï‰ƒ ", "ï‰‚ ", "ï‰ ", "ï‰€ "],
        "align": 0
    },

    "temperature#cpu": {
        "format": " {temperatureC}Â°C",
        "tooltip-format": "CPU temperature {temperatureC}Â°C",
        "hwmon-path": "/sys/class/hwmon/hwmon5/temp1_input",
        "interval": 1,
        "rotate": 0,
        "align": 0
    },

    "temperature#gpu": {
        "format": " {temperatureC}Â°C",
        "tooltip-format": "GPU temperature {temperatureC}Â°C",
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp2_input",
        "interval": 1,
        "rotate": 0,
        "align": 0
    },

    "backlight": {
        "device": "intel_backlight",
        "format": " {icon}{percent}%",
        "format-icons": ["î” ", "î‘ ", "î ", "î‹ ", "î› "],
        "tooltip-format": "Display Brightness {percent}%",
        "align": 0
    },

    "clock": {
        "tooltip-format": "<big>{:%a %d %B %Y}</big>",
        "interval": 1,
        "format": "{:%H\n%M}",
        "rotate": 0,
        "on-click": "~/.config/waybar/scripts/calendar.sh",
    },

    "tray": {
        "spacing": 10
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "on",
            "deactivated": "off"
        }
    }
}
