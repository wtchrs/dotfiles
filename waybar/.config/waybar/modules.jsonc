/**
 * Based on: Waybar Modules from the ML4W Hyprland Starter
 * Source: https://github.com/mylinuxforwork/hyprland-starter/blob/main/dotfiles/.config/waybar/modules.json
 * Modified for personal use
 */
{
    // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "‚ö´",
            "2": "‚ö´",
            "3": "‚ö´",
            "4": "‚ö´",
            "5": "‚ö´",
            "6": "6",
            "7": "7",
            "8": "8",
            "9": "9",
            "10": "10",
            "active": "‚¨§",
            // "default": "‚è∫"
        },
        "persistent-workspaces": {
             "*": 5
        },
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1"
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) ‚Äî Zen Browser": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    // Rofi Application Launcher
    "custom/appmenu": {
        "format": "Apps",
        "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings",
        "on-click": "rofi -show drun -replace",
        "tooltip": false
    },

    // Power Menu
    "custom/exit": {
        "format": "ÔÄë",
        "tooltip-format": "Powermenu",
        "on-click": "wlogout -b 4"
    },

    // Keyboard State
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    // System tray
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },

    // Clock
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt>{calendar}</tt>",
        "format": "{:%Y-%m-%d %H:%M}",
        "format-alt": "{:%Y-%m-%d}"
    },

    // Group Hardware
    "group/hardware": {
        "orientation": "inherit",
        "modules": [
            "cpu",
            "memory",
            "disk"
        ]
    },

    // CPU
    "cpu": {
        "format": " Ôíº {usage}%",
        "on-click": "alacritty --class float -e htop",
        "interval": 2
    },

    // Memory
    "memory": {
        "format": " ÓøÖ {}%",
        "on-click": "alacritty --class float -e htop",
        "interval": 5
    },

    // Harddisc space used
    "disk": {
        "interval": 20,
        "format": " ÔÇ† {percentage_used}% ",
        "path": "/",
        "on-click": "hyprctl dispatch exec \"[float]\" btrfs-assistant-launcher"
    },

    "group/misc": {
        "orientation": "inherit",
        "modules": [
            "pulseaudio",
            "network",
            "battery"
        ]
    },

    // Pulseaudio
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄ® ", "ÔÄ® "]
        },
        "on-click": "alacritty --class float -e pulsemixer"
    },

   // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "Ôá´ {signalStrength}%",
        "format-ethernet": "Ôûñ {ipaddr}",
        "format-disconnected": "Not connected", //An empty format will hide the module.
        "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
        "tooltip-format-wifi": "Ôá´ {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "ÔÉÅ {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "alacritty --class float -e nmtui"
    },

    // Battery
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}{capacity}%",
        "format-charging": "Ôóß {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon}{time}",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
    },

    "mpris": {
        // "format": "{player_icon} {dynamic}",
        "format": "{player_icon} {title} [{position}/{length}]",
        "format-paused": "{status_icon} {title}",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "interval": 1,
        "max-length": 100
    },

    // Bluetooth
    "bluetooth": {
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "blueman-manager",
        "format-no-controller": ""
    },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false,
    },

    // Idle Inhibator
    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons":{
            "activated": "ÔèÅ",
            "deactivated": "ÔÄ£"
        },
        "on-click-right": "hyprlock"
    }
}
